{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "typedocOptions": {
    "name": "geoserver-helper",
    "entryPoints": [
      "lib/rest.ts",
      "lib/wfm.ts",
      "lib/wms.ts",
      "lib/wps.ts"
    ],
    "out": "docs",
    "locales": {
      "zh": {
        "flag_private": "私有"
      }
    },
    "lang": "zh",
    "theme": "default",
    "exclude": [
      "**/*.test.ts",
      "**/node_modules/**"
    ],
    "readme": "README.md"
  },
  "include": [
    "lib/**/*.ts"
  ]
}